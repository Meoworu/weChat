.btn {
  position: absolute;
  bottom: 150rpx;
  left: 50%;
  width: 300rpx;
  margin-left: -150rpx;
  background-color: rgba(53, 73, 94, 0.7);
  color: #fff;
  border: 5rpx solid #fff;
  font-size: 40rpx;
}

swiper .wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: 60rpx;
}
swiper .wx-swiper-dot{
    width:40rpx;
    display: inline-flex;
    height: 10rpx;
    margin-left: 20rpx;
    justify-content:space-between;
}
swiper .wx-swiper-dot::before{
    content: '';
    flex-grow: 1; 
    background: rgba(255,255,255,0.8);
    border-radius: 8rpx
}
swiper .wx-swiper-dot-active::before{
    background:rgba(244,0,0,0.8);   
}
